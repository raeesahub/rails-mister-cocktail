
<h1><%= @cocktail.name %></h1>

<h4>Ingredients</h4>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %>:
      <%= dose.description %>
      </li>
      <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure you want to delete #{dose.ingredient.name}?"} do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
  <% end %>
</ul>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>
